# =============================================================================
# üì± APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_VERSION=1.0.0
VITE_APP_NAME=Birch Lounge Recipe Manager
VITE_APP_DESCRIPTION=Professional cocktail recipe management application
VITE_APP_URL=https://your-domain.com

# =============================================================================
# üåç ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
VITE_ENVIRONMENT=development

# =============================================================================
# üîí SECURITY CONFIGURATION
# =============================================================================
# Enable additional security features and monitoring
VITE_ENABLE_SECURITY_DEBUG=false
VITE_API_KEY_VALIDATION_STRICT=true
VITE_ENABLE_SECURITY_HEADERS=true
VITE_ENABLE_CSP=true
VITE_ENABLE_XSS_PROTECTION=true
VITE_ENABLE_CSRF_PROTECTION=true

# Security monitoring and alerting
VITE_SECURITY_MONITORING_ENABLED=true
VITE_SECURITY_LOG_LEVEL=warn
VITE_MAX_API_CALLS_PER_MINUTE=100

# =============================================================================
# üöÄ PERFORMANCE CONFIGURATION
# =============================================================================
# Performance monitoring and optimization settings
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_BUDGET_JS=500
VITE_PERFORMANCE_BUDGET_CSS=100
VITE_ENABLE_BUNDLE_ANALYZER=false

# =============================================================================
# üìä ANALYTICS CONFIGURATION (Optional)
# =============================================================================
# Privacy-focused analytics (no personal data collection)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ENDPOINT=https://your-analytics-endpoint.com

# =============================================================================
# üîÑ PWA CONFIGURATION
# =============================================================================
# Progressive Web App settings
VITE_PWA_ENABLED=true
VITE_PWA_OFFLINE_ENABLED=true
VITE_PWA_CACHE_STRATEGY=networkFirst
VITE_PWA_UPDATE_STRATEGY=prompt

# =============================================================================
# üß™ DEVELOPMENT TOOLS
# =============================================================================
# Development and debugging tools (DEVELOPMENT ONLY)
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_REACT_DEVTOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_PERFORMANCE_PROFILER=false

# =============================================================================
# üîß BUILD CONFIGURATION
# =============================================================================
# Build optimization settings
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET=es2020
VITE_BUILD_OUTDIR=dist

# =============================================================================
# üåê CORS AND NETWORKING
